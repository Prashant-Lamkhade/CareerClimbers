@{
    ViewBag.Title = "About CareerClimbers";
}

<main aria-labelledby="title" class="container my-5">
    <div class="text-center">
        <h2 id="title" class="display-4 fw-bold text-primary">
            <i class="fas fa-graduation-cap"></i> @ViewBag.Title
        </h2>
        <p class="lead text-muted">Empowering students and mentors to achieve their career goals.</p>
    </div>

    <section class="row mt-4">
        <div class="col-md-6">
            <img src="/Content/images/about-career.jpg" alt="Career Growth" class="img-fluid rounded shadow-lg">
        </div>
        <div class="col-md-6 d-flex align-items-center">
            <div>
                <h3 class="text-success"><i class="fas fa-briefcase"></i> Our Mission</h3>
                <p>
                    CareerClimbers is dedicated to helping students and young professionals navigate their career paths
                    by providing mentorship, success stories, learning resources, and industry insights.
                </p>
                <h3 class="text-warning"><i class="fas fa-users"></i> Our Community</h3>
                <p>
                    We connect students with experienced mentors who have successfully climbed the career ladder.
                    Through mentorship, real success stories, and curated learning resources, we bridge the gap between education and industry.
                </p>
            </div>
        </div>
    </section>

    <section class="mt-5 text-center">
        <h3 class="text-info"><i class="fas fa-cogs"></i> Key Features</h3>
        <div class="row mt-3">
            <div class="col-md-4">
                <div class="p-4 border rounded shadow-sm bg-light">
                    <i class="fas fa-chalkboard-teacher fa-3x text-primary"></i>
                    <h5 class="mt-3">Expert Mentorship</h5>
                    <p>Get guidance from industry professionals and successful mentors.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-4 border rounded shadow-sm bg-light">
                    <i class="fas fa-book-open fa-3x text-success"></i>
                    <h5 class="mt-3">Learning Resources</h5>
                    <p>Access tutorials, interview tips, and career roadmaps.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-4 border rounded shadow-sm bg-light">
                    <i class="fas fa-trophy fa-3x text-warning"></i>
                    <h5 class="mt-3">Success Stories</h5>
                    <p>Read inspiring stories of people who achieved career success.</p>
                </div>
            </div>
        </div>
    </section>

    <section class="mt-5 text-center">
        <h3 class="text-dark"><i class="fas fa-user"></i> Welcome, @User.Identity.Name</h3>
        <p>We are excited to have you as part of the CareerClimbers community!</p>
    </section>
</main>

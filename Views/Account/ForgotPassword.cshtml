@model CareerClimbers.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
}

<main aria-labelledby="title" class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg border-0 rounded-4" style="max-width: 450px; width: 100%;">
        <div class="card-body p-4">
            <h2 id="title" class="text-center text-primary fw-bold">@ViewBag.Title</h2>
            <p class="text-center text-muted">Enter your email, and we'll send you a password reset link.</p>
            <hr />

            @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })

                <!-- Email Input -->
                <div class="mb-3">
                    @Html.LabelFor(m => m.Email, new { @class = "form-label fw-semibold" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Enter your email", required = "required" })
                </div>

                <!-- Submit Button -->
                <div class="text-center mt-3">
                    <button type="submit" class="btn btn-primary btn-lg w-100 shadow-sm">
                        <i class="bi bi-envelope"></i> Send Reset Link
                    </button>
                </div>
            }
        </div>
    </div>
</main>

<!-- Bootstrap & Icons -->
<link rel="stylesheet" href="https://unpkg.com/bootstrap@5.3.3/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


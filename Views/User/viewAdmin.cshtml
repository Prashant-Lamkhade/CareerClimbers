@{
    ViewBag.Title = "Admin Dashboard";
    var profile = ViewBag.Profile as List<CareerClimbers.Models.Profile>;
    var resources = ViewBag.Resources as List<CareerClimbers.Models.resource>;
    var user = ViewBag.User as List<CareerClimbers.Models.User>;
    var rating = ViewBag.Rating as List<CareerClimbers.Models.ratingT>;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard | Career Climber</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">

    <!-- FontAwesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <!-- Custom Styles -->
    <style>
        /* General Styles */
        body {
            font-family: 'Arial', sans-serif;
            background: linear-gradient(135deg, #008080, #1e90ff);
            color: white;
            transition: 0.5s;
            margin-left: 250px; /* Adjusted for sidebar */
        }

        /* Sidebar */
        .sidebar {
            width: 250px;
            height: 100vh;
            position: fixed;
            left: 0; /* Positioning it to the left corner */
            background: rgba(0, 0, 0, 0.9);
            padding-top: 20px;
            transition: 0.3s;
        }
        .sidebar a {
            padding: 15px;
            text-decoration: none;
            font-size: 18px;
            display: block;
            color: white;
            transition: 0.3s;
        }
        .sidebar a:hover {
            background: rgba(0, 255, 255, 0.2);
            border-radius: 5px;
        }

        /* Hero Section */
        .hero {
            padding: 80px 20px;
            text-align: center;
        }

        /* Stats Section */
        .stats {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 20px;
        }
        .stat-box {
            padding: 20px;
            border-radius: 10px;
            font-size: 20px;
            font-weight: bold;
            color: white;
            text-align: center;
            width: 150px;
            box-shadow: 0 0 15px rgba(255, 255, 255, 0.3);
            transition: 0.3s;
        }
        .stat-box:hover {
            transform: scale(1.1);
        }

        /* Services Section */
        .card {
            border: none;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            color: white;
            transition: 0.3s;
            text-align: center;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(255, 255, 255, 0.2);
        }
        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 5px 25px rgba(255, 255, 255, 0.4);
        }

        /* Footer */
        footer {
            text-align: center;
            padding: 20px;
            background: rgba(0, 0, 0, 0.9);
            margin-top: 50px;
        }

        /* Dark Mode */
        .dark-mode {
            background: #111 !important;
            color: white !important;
        }

        .dark-mode .card {
            background: rgba(0, 255, 255, 0.1) !important;
            border: 1px solid rgba(0, 255, 255, 0.5);
        }

        /* Responsive */
        media (max-width: 768px) {
            body {
                margin-left: 0; /* No margin when screen is small */
            }
            .sidebar {
                width: 100px;
            }
            .sidebar a {
                font-size: 14px;
                text-align: center;
            }
            .hero {
                margin-left: 100px;
            }
        }
    </style>
</head>
<body>

    <!-- Sidebar Navigation -->
    <div class="sidebar">
        <a href="#">🏠 Dashboard</a>
        <a href="#">👤 Users</a>
        <a href="#">📚 Resources</a>
        <a href="#">🎓 Mentorships</a>
        <a href="#">📝 Feedback</a>
        <a href="#" onclick="toggleTheme()">🌙 Toggle Dark Mode</a>
    </div>

    <!-- Hero Section -->
    <header class="hero">
        <h1>Welcome, Admin!</h1>
        <p>Manage Users, Mentorships, Success Stories & More</p>

        <!-- Add New Admin Button -->
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addAdminModal">
            <i class="fas fa-user-plus"></i> Add New Admin
        </button>

        <div class="stats">
            <div class="stat-box bg-info">👤 Users: <span id="user-count">@user.Count<span></div>
            <div class="stat-box bg-success">🎓 Mentorships: <span id="mentorship-count">@profile.Count</span></div>
            <div class="stat-box bg-warning">📚 Resources: <span id="resource-count">@resources.Count</span></div>
            <div class="stat-box bg-danger">📝 Feedback: <span id="feedback-count">@rating.Count</span></div>
        </div>
    </header>

    <!-- Modal for Adding New Admin -->
    <div class="modal fade" id="addAdminModal" tabindex="-1" aria-labelledby="addAdminModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addAdminModalLabel">Add New Admin</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Using standard HTML form tag -->
                    <form action="/User/addAdmin" method="post">
                        <div class="mb-3">
                            <label for="adminName" class="form-label">Admin Name</label>
                            <input type="text" class="form-control" id="adminName" name="adminName" required>
                        </div>
                        <div class="mb-3">
                            <label for="adminEmail" class="form-label">Email</label>
                            <input type="email" class="form-control" id="adminEmail" name="adminEmail" required>
                        </div>
                        <div class="mb-3">
                            <label for="adminPhone" class="form-label">Password</label>
                            <input type="number" class="form-control" id="adminPhone" name="adminPhone" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Add Admin</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Services Section -->
    <section id="services" class="container my-5">
        <h2 class="text-center">Admin Services</h2>
        <div class="row d-flex justify-content-center">
            <!-- Added d-flex and justify-content-center -->
            <!-- Card 1 -->
            <div class="col-md-4">
                <div class="card">
                    <i class="fas fa-users fa-3x text-info"></i>
                    <a href="/User/UserList" class="btn">
                        <h4>Manage Users</h4>
                        <p>View, edit, and delete users.</p>
                    </a>
                </div>
            </div>
            <!-- Card 2 -->
            <div class="col-md-4">
                <div class="card">
                    <i class="fas fa-chalkboard-teacher fa-3x text-success"></i>
                    <a href="/User/UserList" class="btn">
                        <h4>Profiles</h4>
                        <p>Manage Profiles</p>
                    </a>
                </div>
            </div>
            <!-- Card 3 -->
            <div class="col-md-4">
                <div class="card">
                    <i class="fas fa-book fa-3x text-warning"></i>
                    <a href="/User/UserList" class="btn">
                        <h4>Resources</h4>
                        <p>Manage learning materials.</p>
                    </a>
                </div>
            </div>
        </div>
    </section>


    <!-- Footer -->
    <footer>
        &copy; 2025 Career Climber | Admin Dashboard
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>

    <!-- JavaScript Enhancements -->
    <script>
        // Dark Mode Toggle
        function toggleTheme() {
            document.body.classList.toggle('dark-mode');
            document.querySelectorAll('.card').forEach(card => {
                card.classList.toggle('bg-dark');
                card.classList.toggle('text-white');
            });
        }

        // Animated Stats
        function animateValue(id, start, end, duration) {
            let range = end - start;
            let current = start;
            let increment = range / (duration / 50);
            let obj = document.getElementById(id);

            let timer = setInterval(() => {
                current += increment;
                obj.textContent = Math.round(current);
                if (current >= end) {
                    clearInterval(timer);
                    obj.textContent = end;
                }
            }, 50);
        }

        // Start the animation when the page loads

    </script>

</body>
</html>

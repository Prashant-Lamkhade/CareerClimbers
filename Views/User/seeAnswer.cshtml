@model CareerClimbers.Models.questionT
@{
    ViewBag.Title = "See Answer";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg border-0 rounded-4" style="max-width: 600px; width: 100%;">
        <div class="card-header text-bg-primary text-center">
            <h4 class="mb-0">Interview Question</h4>
        </div>
        <div class="card-body p-4">
            <h5 class="fw-bold mb-3"><i class="bi bi-question-circle"></i> Question</h5>
            <p class="text-muted">@Model.question</p>

            <h5 class="fw-bold mt-4 mb-3"><i class="bi bi-lightbulb"></i> Answer</h5>
            <p>@(string.IsNullOrWhiteSpace(Model.solution) ? "No answer provided." : Model.solution)</p>

            <!-- Back Button -->
            <div class="mt-4 text-center">
                <button class="btn btn-secondary" onclick="history.back()">
                    <i class="bi bi-arrow-left"></i> Back
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap & Icons -->
<link rel="stylesheet" href="https://unpkg.com/bootstrap@5.3.3/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

@{
    ViewBag.Title = "View Resource";

    // Get Resource and User from ViewBag
    var resource = ViewBag.Resource as CareerClimbers.Models.resource;
    var user = ViewBag.User as CareerClimbers.Models.User;
}

<section class="vh-100" style="background: linear-gradient(135deg, #5f59f7, #6c5ce7);">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-10">
                <div class="card shadow-lg border-0" style="border-radius: 15px;">
                    <div class="card-body p-5">
                        <!-- Title & User Information -->
                        <div class="text-center mb-4">
                            <h2 class="text-primary fw-bold">Resource Details</h2>
                            <p class="text-muted">Material shared by <strong>@user.name</strong></p>
                        </div>

                        <hr class="my-4">

                        <!-- Resource Info -->
                        <h3 class="mb-3 text-dark">@resource.title</h3>
                        <p class="small text-muted">
                            <i class="far fa-calendar-alt"></i> Created on <strong>@resource.created_at</strong> by <strong>@user.name</strong>
                        </p>

                        <div class="container mt-4">
                            <div class="p-4 border rounded bg-light">
                                <h5 class="text-primary"><i class="fas fa-info-circle"></i> Description</h5>
                                <p class="mb-0 text-dark">@resource.description</p>
                            </div>
                        </div>

                        <!-- Resource Link -->
                        <div class="mt-4 text-center">
                            <a href="@resource.link" class="btn btn-primary" target="_blank">
                                <i class="fas fa-link me-2"></i> Open Resource
                            </a>
                        </div>

                        <!-- Spacer -->
                        <div class="mt-4"></div>

                        <!-- Back Button -->
                        <div class="text-center">
                            <a href="javascript:window.history.back();" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i> Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- External Libraries -->
<link rel="stylesheet" href="https://unpkg.com/bootstrap@5.3.3/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
